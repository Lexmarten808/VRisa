{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "paths": {
      "@/*": [
        "./src/*",
        "./app/*",
        "./lib/*",
        "./components/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
